<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.create_doc.CreateDocumentWizardActivity">

    <Spinner
            android:id="@+id/docTypeSelectionSpinner"
            android:entries="@array/docTypes"
            android:spinnerMode="dialog"
            android:prompt="@string/doc_type_selection_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <!--Form structure is pilled to this-->
    <androidx.recyclerview.widget.RecyclerView
            android:visibility="invisible"
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">
    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>